---
import DefaultLayout from "../layouts/DefaultLayout.astro";
import text from "../assets/text/copy.json";
import Button from "../components/Button.astro";
import Video from "../components/Video.jsx";
---

<DefaultLayout title="Arcological">
  <section class="hex1" id="home">
    <div class="padding-64">
      <div class="container margin-128 bottom" data-auto-grid="1">
        <div class="grid">
          <div class="small-12 medium-7 medium-offset-4">
            <h1 class="margin-16 bottom title-left">
              Building the<br /> public good.
            </h1>
          </div>
          <div class="small-12 medium-7 space-9" data-animation="fade-in">
            <p class="bg-neutral-100 radius-large">
              {text.filter((x) => x.page === "thesis")[0].body[0].content}
            </p>
          </div>
        </div>
      </div>
    </div>
    <img src="background_wave1.svg" alt="Wave Decoration" class="wave1" />
  </section>

  <!-- IPFS FUNDS -->
  <section class="text-neutral-0 bg-neutral-800 hex2" id="ipfs-funds">
    <div class="padding-48">
      <div class="container margin-96 top">
        <div class="grid">
          <div class="small-12 medium-12 space-content margin-48 bottom">
            <h2 class="margin-16 blue-heading">
              {text.filter((x) => x.page === "ipfs-fund")[0].title}
            </h2>
            <p>
              {text.filter((x) => x.page === "ipfs-fund")[0].body[0].content}
            </p>
          </div>
        </div>

        <div class="flex">
          <Video client:only="react" />
          <img src="ipfs-circle.png" alt="IPFS Fund Logo" class="logo" />
        </div>
      </div>
    </div>
    <img src="background_wave2.svg" alt="Wave Decoration" class="wave2" />
  </section>

  <!-- PRIVATE RETRIEVAL FUNDS -->
  <section
    class="padding-48 text-neutral-0 bg-neutral-800"
    id="private-retreival-funds"
  >
    <div class="container">
      <div class="grid">
        <div class="small-12 medium-6 space-content">
          <h2 class="purple-heading">
            {text.filter((x) => x.page === "private-retrieval")[0].title}
          </h2>
          <p>
            {
              text.filter((x) => x.page === "private-retrieval")[0].body[0]
                .content
            }
          </p>
          <Button
            title="Learn More"
            link="https://github.com/protocol/research-grants/blob/master/RFPs/rfp-014-private-retrieval-of-data.md"
            className="purple"
          />
        </div>

        <div
          class="small-12 medium-7 offset-medium-7 text-neutral-800 bg-neutral-100 radius-large padding-32"
        >
          <div class="space-content space-48">
            <h3 class="purple-heading">
              {text.filter((x) => x.page === "private-retrieval")[0].list.blurb}
            </h3>
            <ul>
              {
                text
                  .filter((x) => x.page === "private-retrieval")[0]
                  .list.content.map((item) => (
                    <li class="padding-12"> {item.content} </li>
                  ))
              }
            </ul>
            <Button
              title="Find Opportunities"
              link="https://grants.protocol.ai/prog/rfp-014_private_retrieval_of_data/"
              className="purple"
            />
          </div>
        </div>
      </div>
    </div>
    <img src="background_hex3.svg" alt="Wave Decoration" class="hex3" />
    <img src="background_wave3.svg" alt="Wave Decoration" class="wave3" />
  </section>

  <!-- WHY -->
  <section class="padding-64 margin-64 top" id="why">
    <div class="container">
      <div class="small-12 medium-12 space-content">
        <h2 class="margin-16">
          {text.filter((x) => x.page === "why")[0].title}
        </h2>

        <p>
          {text.filter((x) => x.page === "why")[0].body[0].content}
        </p>
      </div>
      <div class="accordion-grid">
        <!-- GRID WITH REASONS -->
        {
          text
            .filter((x) => x.page === "why")[0]
            .list.content.map((item) => (
              <div class="accordion">
                <h3>{item.title}</h3>
                <p>{item.content}</p>
              </div>
            ))
        }
      </div>
    </div>
    <img src="background_wave4.svg" alt="Wave Decoration" class="wave4" />
  </section>

  <!-- ABOUT -->
  <section class="padding-48 hex4" id="about">
    <div class="container">
      <div class="grid">
        <div class="small-12 medium-7 space-content">
          <h2>{text.filter((x) => x.page === "about")[0].title}</h2>
          <p
            class="small-12 medium-7 bg-neutral-100 radius-large outer-padding"
          >
            {text.filter((x) => x.page === "about")[0].body[0].content}
          </p>
        </div>

        <div
          class="small-12 medium-5 space-content space-32 text-neutral-100 bg-neutral-800 radius-large"
        >
          <h3 class="pink-heading">
            {text.filter((x) => x.page === "about")[0].body[1].subtitle}
          </h3>
          <p>{text.filter((x) => x.page === "about")[0].body[1].content}</p>
        </div>
      </div>
    </div>
  </section>
</DefaultLayout>
