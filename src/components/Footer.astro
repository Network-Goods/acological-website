---
import Navigation from "../components/Navigation.astro";

const currentYear = new Date().getFullYear();
---

<footer>
  <div id="footer-navigation" class="is-desktop padding-16 bg-neutral-800">
    <div class="container">
      <a href="/arcological-website">
        <img
          class="logo-footer"
          src={(await import("../assets/img/arcological-logo-footer.png"))
            .default}
          alt="Arcological Logo"
        />
      </a>
      <div class="wrapper">
        <nav class="desktop-menu">
          <ul class="text-neutral-0">
            <li class="menu-item">
              <a href="">Telegram</a>
            </li>
            <li class="menu-item">
              <a href="">Discord</a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</footer>

<style lang="scss" is:global>
  @use "../assets/scss/base/border" as *;
  @use "../assets/scss/base/breakpoint" as *;
  @use "../assets/scss/base/elevation" as *;
  @use "../assets/scss/base/outline" as *;
  @use "../assets/scss/base/size" as *;

  #footer-navigation {
    > .container {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
    }

    &.is-desktop {
      .desktop-menu {
        visibility: visible;
        z-index: 0;
        position: static;
      }
    }

    .wrapper {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    nav {
      @include size-18;

      > ul {
        display: flex;
        gap: 2.5rem;
        // text-decoration: underline;

        .is-active {
          // text-decoration: underline;
        }
      }
    }
  }

  .logo-footer {
    max-width: 12ch;
    position: relative;
    left: -20%;
  }
</style>
